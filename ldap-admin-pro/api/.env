# ==========================================
# Configuration API LDAP Admin
# ==========================================

# Node Environment
NODE_ENV=production
PORT=3000

# LDAP Configuration
LDAP_URL=ldap://openldap:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_ADMIN_DN=cn=admin,dc=example,dc=com
LDAP_ADMIN_PASSWORD=admin

# PostgreSQL Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ldap_admin
DB_USER=admin
DB_PASSWORD=admin123
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-64-chars-minimum
JWT_EXPIRATION=8h
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispass123
REDIS_DB=0

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:80,https://ldap-admin.example.com
CORS_CREDENTIALS=true

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Email Configuration (pour notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=LDAP Admin <noreply@example.com>

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Features Flags
ENABLE_LDAP_SYNC=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true
ENABLE_2FA=false